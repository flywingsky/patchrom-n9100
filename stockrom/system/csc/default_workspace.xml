<favorites xmlns:launcher="http://schemas.android.com/apk/res/com.sec.android.app.launcher" >

    <home>
    
        <!-- Screen 0 -->

        <appwidget
            launcher:packageName="com.sec.android.widgetapp.ap.hero.cmaweather"
            launcher:className="com.sec.android.widgetapp.ap.hero.cmaweather.WeatherClockWidget"
            launcher:screen="0"
            launcher:x="0"
            launcher:y="0"
            launcher:spanX="4"
            launcher:spanY="2" />

        <search
            launcher:screen="0"
            launcher:x="0"
            launcher:y="2" />         

	<!-- Camera -->
        <favorite
	    launcher:packageName="com.sec.android.app.camera"
            launcher:className="com.sec.android.app.camera.Camera"
            launcher:screen="0"
            launcher:x="0"
            launcher:y="3" />

        <!-- Gallery -->
        <favorite
            launcher:packageName="com.sec.android.gallery3d"
            launcher:className="com.sec.android.gallery3d.app.GalleryActivity"
            launcher:screen="0"
            launcher:x="1"
            launcher:y="3" />

        <!-- Email -->
        <favorite
            launcher:packageName="com.android.email"
            launcher:className="com.android.email.activity.Welcome"
            launcher:screen="0"
            launcher:x="2"
            launcher:y="3" />

        <!-- S Planner -->
        <favorite
            launcher:packageName="com.android.calendar"
            launcher:className="com.android.calendar.AllInOneActivity"
            launcher:screen="0"
            launcher:x="3"
            launcher:y="3" />

        <!-- Screen 1 -->

        <appwidget
            launcher:packageName="com.sec.android.app.shealth"
            launcher:className="com.sec.android.app.shealth.widget.WalkMatePlainAppWidget"
            launcher:screen="1"
            launcher:x="0"
            launcher:y="0"
            launcher:spanX="4"
            launcher:spanY="1" />

    <!-- S note 4x1 -->
    <appwidget
        launcher:packageName="com.samsung.android.snote" 
        launcher:className="com.samsung.android.snote.control.ui.widget.WidgetShortcutTransparentProvider" 
        launcher:screen="1" 
        launcher:x="0" 
        launcher:y="1" 
        launcher:spanX="4" 
        launcher:spanY="1" />

        <!-- 三星礼包 (valuepack) -->
        <favorite
            launcher:packageName="com.samsung.valuepack"
            launcher:className="com.samsung.valuepack.activity.ValuePackActivity"
            launcher:screen="1"
            launcher:x="0"
            launcher:y="3" />

        <!-- Note精选 -->
        <favorite
            launcher:packageName="com.samsung.notecollection"
            launcher:className="com.samsung.notecollection.activity.NoteCollectionActivity"
            launcher:screen="1"
            launcher:x="1"
            launcher:y="3" />

        <!-- 三星杂志 -->
        <favorite
            launcher:packageName="com.mci.smagazine"
            launcher:className="com.mci.smagazine.PreSplashActivity"
            launcher:screen="1"
            launcher:x="2"
            launcher:y="3" />

        <!-- Voice Recorder -->
        <favorite
            launcher:packageName="com.sec.android.app.voicenote"
            launcher:className="com.sec.android.app.voicenote.main.VNMainActivity"
            launcher:screen="1"
            launcher:x="3"
            launcher:y="3" />

	<!-- Screen 2  -->

        <appwidget
            launcher:packageName="com.sec.android.widgetapp.samsungapps"
            launcher:className="com.sec.android.widgetapp.samsungapps.WidgetProvider42"
            launcher:screen="2"
            launcher:x="0"
            launcher:y="0"
            launcher:spanX="4"
            launcher:spanY="2" />

    </home>

    <!-- Hotseat (We use the screen as the position of the item in the hotseat) -->

    <hotseat>

        <favorite
            launcher:packageName="com.android.contacts"
            launcher:className="com.android.dialer.DialtactsActivity"
            launcher:screen="0" />

        <favorite
            launcher:className="com.android.contacts.activities.PeopleActivity"
            launcher:packageName="com.android.contacts"
            launcher:screen="1" />

        <favorite
            launcher:className="com.android.mms.ui.ConversationComposer"
            launcher:packageName="com.android.mms"
            launcher:screen="2" />

        <favorite
            launcher:packageName="com.sec.android.app.sbrowser"
            launcher:className="com.sec.android.app.sbrowser.SBrowserMainActivity"
            launcher:screen="3" />
    </hotseat>

</favorites>
